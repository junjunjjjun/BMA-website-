<Layout title="Classes" pageTitle="Our Classes">

  <!-- Hero (40vh tall) -->
  <Section class="relative h-[40vh] w-full bg-black font-['Times New Roman'] text-white flex items-center justify-center">
    <Container class="text-center">
      <h1 class="text-5xl sm:text-6xl font-bold drop-shadow-[0_0_12px_rgba(255,255,255,0.75)]">
        Our Classes
