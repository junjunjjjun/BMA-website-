---
import Layout    from "~/layouts/Layout.astro";
import Section   from "~/components/Section.astro";
import Container from "~/components/Container.astro";
---

<Layout title="Classes" pageTitle="Our Classes">

  <!-- Hero: scrolls vertically, stays full width -->
  <Section class="bg-black font-['Times New Roman'] text-white h-[50vh] flex items-center justify-center">
    <Container class="text-center">
      <h1 class="text-5xl sm:text-6xl font-bold drop-shadow-[0_0_12px_rgba(255,255,255,0.75)]">
        Our Classes
