---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Button from "~/components/Button.astro";
---

<Layout title="Home" pageTitle="WKB Gym">
  <!-- Hero (60vh tall) -->
  <Section class="relative h-[60vh] w-full overflow-hidden">
    <!-- looping GIF/video from public/media -->
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/media/dojo-hero.gif" type="image/gif" />
      <!-- or if you uploaded an MP4:
      <source src="/media/dojo-hero.mp4" type="video/mp4" />
      -->
    </video>

    <!-- Hero Content -->
    <Container class="relative z-10 flex flex-col items-center justify-center text-white h-full">
      <h1 class="text-5xl sm:text-6xl font-bold drop-shadow-[0_0_12px_rgba(0,0,0,0.75)]">
        WKB Gym
      </h1>
      <p class="mt-2 text-lg sm:text-xl drop-shadow-[0_0_20px_rgba(0,0,0,0.75)]">
        Kyokushin Karate / Kickboxing / MMA
      </p>
      <Button url="/joinus" color="white" class="mt-6">
        Book a Trial Class
      </Button>
    </Container>
  </Section>

  <!-- About the Gym -->
  <Section class="bg-[rgba(248,245,237,1)] py-16">
    <Container>
      <h2 class="text-2xl font-bold mb-4">About the Gym</h2>
      <p class="mb-2">
        We train teenagers and adults in MMA, Kickboxing, and Kyokushin Karate. Our coach is experienced and battle-tested.
        Whether you‚Äôre new or seasoned, this is where discipline meets strength.
      </p>
      <p class="font-medium">
        üìç The One Oasis Gym, 3rd floor, BF Homes
      </p>
    </Container>
  </Section>

  <!-- (Add more <Section> blocks here: schedule, testimonials, footer, etc.) -->
</Layout>
