---
import Layout    from "~/layouts/Layout.astro";
import Section   from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Button    from "~/components/Button.astro";
import DojoVideo from "~/assets/media/dojo.mp4";
---

<Layout title="Home" pageTitle="WKB Gym">
  <!-- Hero: full-screen video background -->
  <Section class="relative h-screen w-full overflow-hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src={DojoVideo} type="video/mp4" />
    </video>

    <!-- Hero content centered over the video -->
    <Container class="relative z-10 flex flex-col items-center justify-center text-white h-full">
      <h1 class="text-6xl font-bold drop-shadow-[0_0_12px_rgba(0,0,0,0.75)]">
        WKB Gym
      </h1>
      <p class="mt-4 text-2xl drop-shadow-[0_0_20px_rgba(0,0,0,0.75)]">
        Kyokushin Karate / Kickboxing / MMA / Muay Thai
      </p>
      <Button url="/joinus" color="white" class="mt-8">
        Book a Trial Class
      </Button>
    </Container>
  </Section>

  <!-- About the Gym section -->
  <Section class="bg-[rgba(248,245,237,1)] py-16">
    <Container>
      <h2 class="text-3xl font-bold mb-6">About the Gym</h2>
      <p class="mb-4">
        We train teenagers and adults in MMA, Kickboxing, Kyokushin Karate, and Muay Thai.
        Our coach is experienced and battle-tested. Whether you‚Äôre new or seasoned,
        this is where discipline meets strength.
      </p>
      <p class="font-medium">
        üìç The One Oasis Gym, 3rd floor, BF Homes
      </p>
    </Container>
  </Section>

  <!-- (Add additional sections: schedule, testimonials, footer, etc.) -->
</Layout>
